<?xml version='1.0' encoding='utf-8' ?>
<widget
  id="com.phonegap.zak"
  version="1.0.0"
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:cdv="http://cordova.apache.org/ns/1.0"
>
    <name>Zak</name>
    <description>
        Zak App Phonegap Project Application
    </description>
    <author
    email="themepassion@jaybabani.com"
    href="https://codecanyon.net/user/themepassion/portfolio"
  >
        themepassion@jaybabani.com
    </author>
    <content src="views/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
 <platform name="android">    
    <icon src="www/res/icon/android/drawable-mdpi-icon.png" density="mdpi" />
    <icon src="www/res/icon/android/drawable-ldpi-icon.png" density="ldpi" />
    <icon src="www/res/icon/android/drawable-hdpi-icon.png" density="hdpi" />
    <icon src="www/res/icon/android/drawable-xhdpi-icon.png" density="xhdpi" />
    <icon
      src="www/res/icon/android/drawable-xxhdpi-icon.png"
      density="xxhdpi"
    />

</platform>

</widget>
